<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mdrawlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryRed">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="348dp"
            android:layout_height="88dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/Dtitle"
            android:textColor="@color/White"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <Button
            android:id="@+id/btn_details"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_shape"
            android:text="Ajánlat Részletei"
            android:textColor="@color/White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/img_weeklyDiscouint"
            android:layout_width="391dp"
            android:layout_height="424dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:srcCompat="@drawable/hoteleto" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginBottom="292dp"
            android:layout_marginTop="8dp"
            android:text="Az ajánlat Érvényes"
            android:textColor="@color/White"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.8" />

        <TextView
            android:id="@+id/txt_startDate"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:text="stdate"
            android:textColor="@color/White"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_details"
            app:layout_constraintHorizontal_bias="0.159"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:layout_constraintVertical_bias="0.133" />

        <TextView
            android:id="@+id/asd"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:text="-tól"
            android:textColor="@color/White"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_details"
            app:layout_constraintHorizontal_bias="0.397"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_startDate"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:layout_constraintVertical_bias="0.133" />

        <TextView
            android:id="@+id/txt_endDate"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:text="stdate"
            android:textColor="@color/White"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_details"
            app:layout_constraintHorizontal_bias="0.731"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:layout_constraintVertical_bias="0.133" />

        <TextView
            android:id="@+id/asd2"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:text="-ig"
            android:textColor="@color/White"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_details"
            app:layout_constraintHorizontal_bias="0.843"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_endDate"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:layout_constraintVertical_bias="0.133" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navcigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>